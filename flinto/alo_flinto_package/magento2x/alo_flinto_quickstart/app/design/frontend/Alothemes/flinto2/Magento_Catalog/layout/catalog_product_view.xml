<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
	     <move element="product.info.details" destination="product.view" />
		 <move element="product.info.overview" destination="product.content.left" after="product.info.price"/>
		 <move element="content.complete" destination="content" after="product.info.details"/>
		 <referenceBlock name="product.info.shopbrand" remove="true"/>
		 <container name="content.complete" as="content_complete" label="Complete Container"  htmlTag="div" htmlClass="sections-content-complete wrap"/>
		 <referenceContainer name="content.complete" htmlClass="additional-complete-policy-block">
			 <block class="Magento\Cms\Block\Block" name="additional_complete_policy_block" before="-">
				<arguments>
				  <argument name="block_id" xsi:type="string">additional-complete-policy-block</argument>
				</arguments>
			  </block>
		 </referenceContainer>
		 <referenceContainer name="sections.page.bottom" htmlClass="additional-custom-block sections-page-bottom wrap">
			  <block class="Magento\Cms\Block\Block" name="additional_custom_block" after="-">
				<arguments>
				  <argument name="block_id" xsi:type="string">additional-custom-product</argument>
				</arguments>
			  </block>
        </referenceContainer>
    </body>
</page>
